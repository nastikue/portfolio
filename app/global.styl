color_white           = #fff
color_black           = #000
color_gray            = #a3a3a3
color_dark_violet     = #3c0f38
color_dark_red        = #620031

linear_gray_violet_gradient  = linear-gradient(to top, rgba(color_gray,0) 0%, rgba(color_dark_violet,.1) 80%, rgba(color_dark_violet,.1) 100%)

html
body
	position relative
	width 100%
	height 100%
	min-width 1024px

sup
	position initial
	vertical-align super
	font-size 60%

#pages
	position: absolute
	width 100%
	height 100%
	top 0
	right 0
	bottom 0
	left 0
	margin auto
	overflow hidden
	text-align left
	color color_dark_violet
	h1
		font 700 30px / 1.2 Lato
	p
		font 400 16px / 1.2 Lato
	li
		font 400 18px / 1.2 Nixieone
	article
		display none
		position absolute
		box-sizing border-box
		opacity 0
		transition opacity 2s linear
		&.active
			display block
			opacity 1
			width 100%
			height 100%
#menu
	position absolute
	bottom 0
	width 100%
	height 70px
	background rgba(black, .3)
button
	position absolute
	bottom 10px
	width 50px
	height @width
	border 2px solid white
	border-radius 50%
	background transparent
	&:after
		position absolute
		content ''
		width 33%
		height @width
		left 45%
		top 50%
		border-right 3px solid white
		border-top 3px solid white
		transform-origin left top
		transform rotate3d(0, 0, 1, 45deg) translate3d(-50%,-50%,0)
.next
	right 20px
.back
	left 20px
	&:after
		left 55%
		transform rotate3d(0, 0, 1, 225deg) translate3d(-50%,-50%,0)

p.bullet
ul.bullet-list li
	position relative
	margin-bottom 11px
	padding-left .8em
	height 66px
	width @height
	font-size 24px
	color color_white
	&:before
		position absolute
		content 'â€¢'
		left 0

.button-with-circle
	display flex
	flex-direction column
	align-items center
	justify-content center
	color color_dark_violet
	.circle
		position relative
		margin 6px
		left 0
		top 0
		height 66px
		width @height
		border-radius 50%
		border 2px solid color_dark_violet
		&.arrow
			&:after
				position absolute
				content ''
				width 33%
				height @width
				left 45%
				top 50%
				border-right 3px solid color_dark_violet
				border-top 3px solid color_dark_violet
				transform-origin left top
				transform rotate3d(0, 0, 1, 45deg) translate3d(-50%,-50%,0)

.hidden
	visibility hidden
	pointer-events none